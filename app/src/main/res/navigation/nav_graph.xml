<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/baseFragment">

    <fragment
        android:id="@+id/baseFragment"
        android:name="com.example.todolist.BaseFragment"
        android:label="fragment_base"
        tools:layout="@layout/fragment_base" >
        <action
            android:id="@+id/action_baseFragment_to_fullScreenDialogFragment"
            app:destination="@id/fullScreenDialogFragment" />
    </fragment>
    <dialog
        android:id="@+id/fullScreenDialogFragment"
        android:name="com.example.todolist.FullScreenDialogFragment"
        android:label="fragment_dialog_fullscreen"
        tools:layout="@layout/fragment_dialog_fullscreen" />
</navigation>